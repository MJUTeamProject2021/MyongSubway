<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoardModifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/modify_Button_close"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_white_ripple"
                android:backgroundTint="#00000000"
                app:icon="@drawable/ic_closex"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="#000000" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="글 수정"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/modify_Button_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_white_ripple"
                android:backgroundTint="#006A6C6E"
                android:text="수정"
                android:textColor="#000000"
                app:icon="@drawable/ic_modify"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconTint="#000000" />

        </LinearLayout>

        <EditText
            android:id="@+id/modify_textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="글 제목"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/modify_textview_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            tools:text="내용" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>