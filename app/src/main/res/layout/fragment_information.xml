<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#FAFAFA"
    tools:context=".StationInformationFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_layout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_information_close"
                android:layout_width="68dp"
                android:layout_height="72dp"
                android:background="#05E4D5D5"
                app:icon="@drawable/ic_leftarrow"
                app:iconGravity="top"
                app:iconSize="60dp"
                app:iconTint="#000000" />

            <TextView
                android:id="@+id/fragment_information_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="101역"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHighlight="#D61B1B"
                android:textColorHint="#9A6262"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_information_line"
                android:layout_width="64dp"
                android:layout_height="61dp"
                android:layout_gravity="right"
                android:background="@drawable/round_button"
                android:drawableTint="@null"
                android:text="1호선"
                android:textSize="14sp"
                android:textStyle="bold"
                android:translationX="-3dp"
                android:translationY="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_layout"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/fragment_information_adjacent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인접한 역"
                    android:textColor="#191515"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개찰구 내 화장실"
                    android:textColor="#191515"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/fragment_information_toilet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="있음"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내리는 문 방향"
                    android:textColor="#191515"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/fragment_information_door"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오른쪽"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_information_facilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="역 내 시설"
                    android:textColor="#191515"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/round_layout">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="지하철 내 공기 질"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="상태 : "
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/fragment_information_airstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="정보를 불러오는중..."
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_information_pmq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/fragment_information_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호:" />

            <TextView
                android:id="@+id/fragment_information_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="02-2222-2222"
                android:textColor="#254BB8" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>