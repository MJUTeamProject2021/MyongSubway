<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_button_topmenu"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_comment_writer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="bottom"
                android:text="작성자"
                android:textAlignment="gravity"
                android:textColor="#0E0E0E"
                android:textSize="20sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/round_button_topmenu">

                <Button
                    android:id="@+id/fragment_comment_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:text="삭제"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textColor="#222121"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fragment_comment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="작성시간" />
    </LinearLayout>
</FrameLayout>