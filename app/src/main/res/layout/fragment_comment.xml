<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_button_topmenutop"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:id="@+id/fragment_comment_writer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_weight="7"
                android:gravity="bottom"
                android:text="작성자"
                android:textAlignment="gravity"
                android:textColor="#0E0E0E"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/fragment_comment_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/bg_white_ripple"
                android:backgroundTint="#00FFFFFF"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                app:icon="@drawable/ic_closex"
                app:iconSize="20dp"
                app:iconTint="#292828" />

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:text="내용"
            android:textColor="#222121"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/fragment_comment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="8dp"
            android:text="작성시간"
            android:textSize="12dp" />
    </LinearLayout>
</FrameLayout>