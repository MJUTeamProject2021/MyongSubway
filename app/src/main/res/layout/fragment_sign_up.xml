<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpFragment">

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup_textview_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24dp"
                android:text="회원가입" />

            <TextView
                android:id="@+id/signup_textview_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사용하실 이메일을 입력해주세요" />

            <EditText
                android:id="@+id/signup_edittext_emailsignup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="user@gmail.com" />

            <TextView
                android:id="@+id/signup_textview_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호를 입력해주세요" />

            <EditText
                android:id="@+id/signup_edittext_passwordsignup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:hint="****" />

            <Button
                android:id="@+id/signup_button_completesignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원가입" />
        </LinearLayout>

    </FrameLayout>
</FrameLayout>