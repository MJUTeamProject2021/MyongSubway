<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_report_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#901C1C1B"
    android:clickable="true"
    tools:context=".StationReportFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/fragment_report_opaque"
            android:layout_width="match_parent"
            android:layout_height="548dp"
            android:background="#00FFFFFF" />

        <Button
            android:id="@+id/fragment_report_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00472A2A"
            android:backgroundTint="@null"
            android:text="닫기"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:translationY="-80dp"
            app:icon="@drawable/ic_exit"
            app:iconGravity="top"
            app:iconPadding="0dp"
            app:iconSize="50dp"
            app:iconTint="#EC5959" />

        <Button
            android:id="@+id/fragment_report_desti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00472A2A"
            android:backgroundTint="@null"
            android:text="도착역"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:translationX="70dp"
            app:icon="@drawable/ic_desti"
            app:iconGravity="top"
            app:iconPadding="0dp"
            app:iconSize="50dp"
            app:iconTint="#00BCD4" />

        <Button
            android:id="@+id/fragment_report_depart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00472A2A"
            android:backgroundTint="@null"
            android:text="출발역"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:translationX="-70dp"
            app:icon="@drawable/ic_depart"
            app:iconGravity="top"
            app:iconPadding="0dp"
            app:iconSize="50dp"
            app:iconTint="#00BCD4" />

        <Button
            android:id="@+id/fragment_report_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:text="역정보"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:translationY="80dp"
            app:icon="@drawable/ic_info"
            app:iconGravity="top"
            app:iconPadding="0dp"
            app:iconSize="50dp"
            app:iconTint="#FFFFFF" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_report_name"
            android:layout_width="75dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:backgroundTint="@null"
            android:drawableTint="@null"
            android:text="101역"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/fragment_report_menulayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/round_button_1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fragment_report_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="1호선"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/fragment_report_bookmark"
                        android:layout_width="33dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="#00472A2A"
                        android:backgroundTint="@null"
                        android:text="즐겨찾기"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:translationX="150dp"
                        android:translationY="-10dp"
                        app:icon="@drawable/ic_bookmark"
                        app:iconGravity="top"
                        app:iconPadding="0dp"
                        app:iconSize="30dp"
                        app:iconTint="#FDC600" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/fragment_report_addlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/round_layout"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/fragment_report_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#08B53939"
                    android:backgroundTint="#BA2121"
                    android:textColor="#000000"
                    app:icon="@drawable/ic_leftarrow"
                    app:iconTint="#000000" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fragment_report_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/round_layout"
                    android:backgroundTint="@null"
                    android:text="101역"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:strokeColor="#040000" />

                <Button
                    android:id="@+id/fragment_report_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#08B53939"
                    android:backgroundTint="#BA2121"
                    android:textColor="#000000"
                    app:icon="@drawable/ic_rightarrow"
                    app:iconGravity="end"
                    app:iconTint="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fragment_report_toilet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#00FFFFFF"
                    android:text="내부\n화장실: X"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:icon="@mipmap/ic_toilet_foreground"
                    app:iconGravity="end"
                    app:iconPadding="1dp"
                    app:iconSize="60dp"
                    app:iconTint="#000000" />

                <Button
                    android:id="@+id/fragment_report_door"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#00FFFFFF"
                    android:text="내리는문"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:icon="@null"
                    app:iconGravity="end"
                    app:iconPadding="1dp"
                    app:iconSize="80dp"
                    app:iconTint="#000000" />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>